#admin.col-md-10.col-md-offset-1
  .col-md-4
    .panel.panel-info
      .panel-heading
        h3.panel-title Average payback %
      .panel-body
        = number_to_percentage(@average_payback_percent, precision: 2)
    .panel.panel-success
      .panel-heading
        h3.panel-title Profit
      .panel-body
        = @profit.to_s + " Ð"
    .panel.panel-warning
      .panel-heading
        h3.panel-title Promotion payout
      .panel-body
        = @promotion_payout.to_s + " Ð"

  .col-md-4
    .panel.panel-info
      .panel-heading
        h3.panel-title Average games per day
      .panel-body
        = @average_games_per_day
    .panel.panel-success
      .panel-heading
        h3.panel-title Total approximate user balance
      .panel-body
        = @total_approximate_user_balance.to_s + " Ð"
    .panel.panel-warning
      .panel-heading
        h3.panel-title Outstanding redemptions
      .panel-body
        = @outstanding_redemptions

  .col-md-4
    .panel.panel-info
      .panel-heading
        h3.panel-title Total games
      .panel-body
        = @total_games
    .panel.panel-success
      .panel-heading
        h3.panel-title Wallet balance
      .panel-body
        = @wallet_balance.to_s + " Ð"
    .panel.panel-warning
      .panel-heading
        h3.panel-title Promotion count
      .panel-body
        = @promotion_count